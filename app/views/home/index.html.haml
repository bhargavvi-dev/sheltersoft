%header.home
  .header-content
    .header-content-inner
      %h1=t("home.top.header_h1")
      %hr
        %p=t("home.top.header_p")        
        = link_to t("home.top.find_out_more"), page_path("about-us"), :class => "btn btn-primary btn-xl"
%section#about.bg-primary
  .container
    .row
      .col-lg-8.col-lg-offset-2.text-center
        %h2.section-heading=t("home.about.header_h1")
        %hr.light
          %p.text-faded=t("home.about.header_p")
          = link_to t("home.about.get_started"), page_path("specialization"), :class => "btn btn-default btn-xl"
%section#services
  .container
    .row
      .col-lg-12.text-center
        %h2.section-heading=t("home.services.header_h1")
        %hr.light
          %p=t("home.services.header_p")
  .container
    .row
      .col-lg-3.col-md-6.text-center
        .service-box
          %i.fa.fa-4x.fa-diamond.wow.bounceIn.text-primary
          %h3=t("home.services.header1_h1")
          %p.text-muted=t("home.services.header1_p")
      .col-lg-3.col-md-6.text-center
        .service-box
          %i.fa.fa-4x.fa-paper-plane.wow.bounceIn.text-primary{"data-wow-delay" => ".1s"}
          %h3=t("home.services.header2_h1")
          %p.text-muted=t("home.services.header2_p") 
      .col-lg-3.col-md-6.text-center
        .service-box
          %i.fa.fa-4x.fa-newspaper-o.wow.bounceIn.text-primary{"data-wow-delay" => ".2s"}
          %h3=t("home.services.header3_h1")
          %p.text-muted=t("home.services.header3_p")
      .col-lg-3.col-md-6.text-center
        .service-box
          %i.fa.fa-4x.fa-heart.wow.bounceIn.text-primary{"data-wow-delay" => ".3s"}
          %h3=t("home.services.header4_h1")
          %p.text-muted=t("home.services.header4_p")
          
/ = render "home/portfolio" if @projects.count > 0

%aside.bg-dark
  .container.text-center
    .call-to-action
      %h2=t("home.work.header_h2")
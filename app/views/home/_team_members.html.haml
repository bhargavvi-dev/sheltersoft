%section#portfolio.no-padding
  .container-fluid
    .row.no-gutter
      %h2.text-center
        = t("general.our_team")    
      - if @teams.count > 0
        - @teams.each_with_index do |member, i|
          .col-lg-4.col-sm-6
            = link_to "javascript:void(0);", :class => "portfolio-box" do
              = image_tag(avatar_image_url(member.avatar.url(:medium)), class: "img-responsive")
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded
                    = member.name
                  .project-name
                    %strong= member.position
                  %hr
                    %p=member.description
      - else
        .col-lg-12.col-md-6.text-center
          .service-box
            %h1=t("general.coming_soon")                    
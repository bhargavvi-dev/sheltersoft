.mainContainer
  .loginPage
    .container
      %h1.pageTitle
        = t('general.change_password')
      .row 
        .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
          .formBox
            = form_for(@user, :url => update_password_path ) do |f|
              = f.hidden_field :reset_password_token
              .form-group               
                = f.password_field :password, :autocomplete => "off", placeholder: t('change_password.new_password'), :class => "form-control"
                - if @user.errors["password"].any?
                  .errorMsg
                    = @user.errors["password"][0]
              .form-group               
                = f.password_field :password_confirmation, placeholder: t('change_password.confirm_password'), :class => "form-control"  
                - if @user.errors["password_confirmation"].any?
                  .errorMsg
                    = @user.errors["password_confirmation"][0]  
              .form-button
                = f.submit t('general.update') , :class => "btn btn-success", :data => {:disable_with => t("general.updating")}
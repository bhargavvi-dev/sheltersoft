.mainContainer
  .loginPage
    .container
      %h1.pageTitle= t('login.login_to_your_account')
      .row
        .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
          .formBox
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              - if alert.present?
                .errorMsg= alert
              .form-group
                = f.email_field :email, autofocus: true, placeholder: t('login.email'), :class => "form-control"
              .form-group
                = f.password_field :password, placeholder: t('login.password'), :class => "form-control"
              .form-button
                = f.submit t('general.login'), :class => "btn btn-success", :name => "login"
              .formLinks.clearfix
                = link_to t('general.fogot_password'), forgot_password_path, :class => "linkLeft"
                =# link_to t('general.create_an_account'), sign_up_path, :class => "linkRight", 'data-no-turbolink' => true
.mainContainer
  .registerPage
    .container
      %h1.pageTitle= t('signup.create_account')      
      .row
        .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
          .formBox
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              .form-group
                = f.text_field :first_name, autofocus: true, placeholder: t('signup.fname'), :class => "form-control"
                - if resource.errors["first_name"].any?
                  .errorMsg
                    = resource.errors["first_name"][0]
              .form-group
                = f.text_field :last_name, autofocus: true, placeholder: t('signup.lname'), :class => "form-control"
                - if resource.errors["last_name"].any?
                  .errorMsg
                    = resource.errors["last_name"][0]
              .form-group
                = f.text_field :company, autofocus: true, placeholder: t('signup.company'), :class => "form-control"
                - if resource.errors["company"].any?
                  .errorMsg
                    = resource.errors["company"][0] 
              .form-group
                = f.email_field :email, autofocus: true, placeholder: t('signup.email'), :class => "form-control"
                - if resource.errors["email"].any?
                  .errorMsg
                    = resource.errors["email"][0]
              .form-group
                = f.password_field :password, autofocus: true, placeholder: t('signup.password'), :class => "form-control"
                - if resource.errors["password"].any?
                  .errorMsg
                    = resource.errors["password"][0]
              .form-button
                = f.submit t('signup.register'), :class => "btn btn-success", :name => "login"
              .formLinks.clearfix
                = link_to t('general.fogot_password'), forgot_password_path, :class => "linkLeft"
                = link_to t('general.have_an_account'), sign_in_path, :class => "linkRight"
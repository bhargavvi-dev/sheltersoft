.mainContainer
  .forgotPasswordPage
    .container
      %h1.pageTitle= t('recovery.recover_password')      
      .row
        .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
          .formBox
            = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
              .form-group
                = f.email_field :email, autofocus: true, placeholder: t('recovery.email'), :class => "form-control"
                - if resource.errors["email"].any?
                  .errorMsg
                    = resource.errors["email"][0]
              .form-button
                = f.submit t('recovery.recover'), :class => "btn btn-success", :name => "login"
              .formLinks.clearfix
                = link_to t('general.have_an_account'), sign_in_path, :class => "linkLeft"
                = link_to t('general.create_an_account'), sign_up_path, :class => "linkRight", 'data-no-turbolink' => true